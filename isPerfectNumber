 public static boolean isPerfectNumber(int number) {
        int i = 1,sum=0;
        if (number < 1)
        {return false;}

        else{
            while (i<number) {
                if (number%i==0) {

                    sum=sum+i;
                }
                    i++;
                }
            if(sum==number)
                return true;
            else return false;
            }
        }
